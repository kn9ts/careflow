# Application Configuration
NODE_ENV=development
PROJECT_ID=your_project_id_here

# Twilio Credentials (Server-side only)
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_TWIML_APP_SID=your_twiml_app_sid
TWILIO_API_KEY=your_api_key
TWILIO_API_SECRET=your_api_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Firebase Client Config (Public)
# Get these from: https://console.firebase.google.com → Project Settings → General → Your apps → Web app
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com

# Firebase Cloud Messaging (Public)
# Get this from: https://console.firebase.google.com → Project Settings → Cloud Messaging → Web Push certificates
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_here


# Firebase Admin Config (Server-side only)
# Get these from: https://console.firebase.google.com → Project Settings → Service accounts → Generate new private key
FIREBASE_ADMIN_PROJECT_ID=careflow-5ac50
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@careflow-5ac50.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase Cloud Messaging (Server-side only)
# Get this from: https://console.firebase.google.com → Project Settings → Cloud Messaging → Cloud Messaging API (Legacy)
# Note: This is optional - the system will use the Admin SDK if available
FIREBASE_LEGACY_SERVER_KEY=your_legacy_server_key_here

# MongoDB Atlas
# Get this from: https://cloud.mongodb.com → Database → Connect → Drivers → Node.js
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/careflow?retryWrites=true&w=majority

# Note: AWS S3 has been replaced with Backblaze B2
# Backblaze B2 is S3-compatible and more cost-effective
# Get credentials from: https://secure.backblaze.com/app_keys.htm
BACKBLAZE_KEY_ID=your-backblaze-key-id
BACKBLAZE_APPLICATION_KEY=your-backblaze-application-key
BACKBLAZE_BUCKET_NAME=your-bucket-name
BACKBLAZE_ENDPOINT=https://s3.us-east-1.backblazeb2.com
BACKBLAZE_REGION=us-east-1

# TURN Server Configuration (Optional)
# Required for users behind symmetric NATs or corporate firewalls
# See: docs/TURN_CONFIGURATION.md for setup instructions
#
# Twilio Network Traversal (Free tier available):
# Get credentials from: https://console.twilio.com → Network Traversal → Settings
NEXT_PUBLIC_TURN_SERVER_URL=turn:your-turn-server.com:3478
NEXT_PUBLIC_TURN_USERNAME=your-username
NEXT_PUBLIC_TURN_CREDENTIAL=your-password

# Multiple TURN Servers (Optional, for redundancy)
# NEXT_PUBLIC_TURN_SERVER_URL_2=turn:turn-server-2.com:3478
# NEXT_PUBLIC_TURN_USERNAME_2=username-2
# NEXT_PUBLIC_TURN_CREDENTIAL_2=password-2
