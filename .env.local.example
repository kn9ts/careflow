# ==============================================================================
# CareFlow Environment Configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. Application Base Configuration
# ------------------------------------------------------------------------------
NODE_ENV=development
PROJECT_ID=your-project-id
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# 2. Twilio Voice & PSTN Configuration (Server-side only)
# ------------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret
TWILIO_TWIML_APP_SID=your-twilio-twiml-app-sid
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ------------------------------------------------------------------------------
# 3. Firebase Client Configuration (Publicly Accessible)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=your-firebase-database-url
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key-here

# ------------------------------------------------------------------------------
# 4. Firebase Admin Configuration (Server-side only)
# ------------------------------------------------------------------------------
FIREBASE_ADMIN_PROJECT_ID=your-firebase-admin-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=your-firebase-admin-client-email
FIREBASE_ADMIN_PRIVATE_KEY="your-firebase-admin-private-key"

# ------------------------------------------------------------------------------
# 5. Database Configuration
# ------------------------------------------------------------------------------
MONGODB_URI=your-mongodb-uri

# ------------------------------------------------------------------------------
# 6. Media Storage Configuration (Backblaze B2 & Cloudinary)
# ------------------------------------------------------------------------------
BACKBLAZE_KEY_ID=your-backblaze-key-id
BACKBLAZE_APPLICATION_KEY=your-backblaze-application-key
BACKBLAZE_BUCKET_NAME=your-backblaze-bucket-name
BACKBLAZE_ENDPOINT=your-backblaze-endpoint
BACKBLAZE_REGION=your-backblaze-region

CLOUDINARY_URL=your-cloudinary-url

# ------------------------------------------------------------------------------
# 7. WebRTC & Network Traversal (TURN Server)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_TURN_SERVER_URL=your-turn-server-url
NEXT_PUBLIC_TURN_USERNAME=your-turn-username
NEXT_PUBLIC_TURN_CREDENTIAL=your-turn-credential

# ------------------------------------------------------------------------------
# 8. AI Service Providers API Keys
# ------------------------------------------------------------------------------
NEXT_OPENAI_CHATGPT_API_KEY=your-openai-api-key
NEXT_GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key
NEXT_ANTHROPIC_CLAUDE_API_KEY=your-anthropic-claude-api-key
NEXT_ZAI_GLM_API_KEY=your-zai-glm-api-key
NEXT_OPENROUTERAI_API_KEY=your-openrouterai-api-key
